interface={{ listen_interface }}
bind-interfaces

local=/{{ domain_name|default('lan') }}/
domain={{ domain_name|default('lan') }}

dhcp-authoritative
dhcp-range={{ dhcp_range_start }},{{ dhcp_range_end }},{{ dhcp_netmask }},1h

dhcp-option=option:router,{{ dhcp_router }}
dhcp-option=option:dns-server,{{ dhcp_dns_servers | join(',') }}
dhcp-option=option:domain-name,{{ domain_name }}
dhcp-option=option:domain-search,{{ domain_search | join(',') }}

{% for item in dhcp_hosts %}
dhcp-host={{ item.hwaddr }},{{ item.ipv4 }},{{ item.hostname }}
{% endfor %}
